<%= content_for :page_title,  "All the activities" %>

<div class="section">
	<div class="container">
		<div class="box" >
		<% @activities.each do |activity| %>
			<div class="card">
		  <div class="card-content">
		    <div class="media">
		      <div class="media-content">
		        <p class="title is-4"><%= link_to activity.name, activity  %></p>
		      </div>
		    </div>
		    <div class="content">
		     	<%= activity.description %>
		    </div>
		    </div>
		  </div>
		</div>
		<% end %>
	</div>
</div>
