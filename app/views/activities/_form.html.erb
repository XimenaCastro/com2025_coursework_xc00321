<div class="section">
	<%= simple_form_for @activity do |f| %>
	<div class="field">
		<div class="control">
		<%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
		</div>
	</div>

<div class="field">
	<div class="field">
		<div class="control">
		<%= f.input :description, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label'} %>
		</div>
	</div>

	<div class="field">
      <div class="control">
        <span class="select">
          <%= f.input_field :country_id, collection:@countries.map { |c| [c.name, c.id] }, prompt: "Select Country" %>
        </span>
      </div>
		</div>

	<%= f.button :submit, class: "button is-primary" %>

		<% end %>
</div>
