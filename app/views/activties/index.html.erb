<% content_for :page_title,  "All the activities" %>

<div class="section">
	<div class="container">
		<% @posts.each do |activity| %>
			<div class="card">
		  <div class="card-content">
		    <div class="media">
		      <div class="media-content">
		        <p class="title is-4"><%= link_to activity.title, activity  %></p>
		      </div>
		    </div>
		    <div class="content">
		     	<%= activity.content %>
		    </div>
		    <!-- <div class="comment-count"> -->
		    	<!-- <span class="tag is-rounded"><%# = post.comments.count %> comments</span> -->
		    </div> 
		  </div>
		</div>
		<% end %>
	</div>
</div>