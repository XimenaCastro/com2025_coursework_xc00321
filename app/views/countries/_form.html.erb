<div class="section">
	<%= simple_form_for @country do |f| %>
	<div class="field">
		<div class="control">
		<%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
		</div>
	</div>

<div class="field">
	<div class="field">
		<div class="control">
		<%= f.input :description, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label'} %>
		</div>
	</div>


	<div class="field">
			<div class="control">
    			<%= f.input :link, input_html: {class: 'link' }, wrapper: false, label_html: { class: 'label'} %>
			</div>
  </div>

	<div class="button is-link">
		<div class="control">
				<%= f.button :submit, class: "button is-primary" %>
		</div>
	</div>


		<% end %>
</div>
