<%= content_for :page_title, @country.name %>

<section class="section">
	<div class="container">
		<nav class="level">
		  <!-- Left side -->
		  <div class="level-left">
		    <p class="level-item">
		        <strong>Actions</strong>
		    </p>
		  </div>
		  <!-- Right side -->
		  <div class="level-right">

		  	<p class="level-item">
				<%= link_to "Delete", countries_path(@country), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
				</p>
		  </div>
		</nav>
		<hr/>

		<div class="content">
			<%= @country.description %>
      <a class="button is-link is-outlined ">
        <%= country.link %>
      </a>
		</div>


	</div>
</section>
