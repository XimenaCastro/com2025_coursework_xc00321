<%= content_for :page_title,  "All the countries" %>

<div class="section">
	<div class="container">
		<div class="box" >
		<% @countries.each do |country| %>
			<div class="card">
		  <div class="card-content">
		    <div class="media">
		      <div class="media-content">
		        <p class="title is-4"><%= link_to country.name, country  %></p>
		      </div>
		    </div>
		    <div class="content">
		     	<%= country.description %>
		    </div>


          <div class="button is-link">
            <%= country.link %>
          </div>
		    </div>
		  </div>
		</div>
		<% end %>
	</div>
